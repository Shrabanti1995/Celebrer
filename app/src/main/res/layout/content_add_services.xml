<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.celebrer.AddServices"
    tools:showIn="@layout/activity_add_services"
    android:background="#000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/textView40"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:hint="Type your name"
        android:textColor="#fff"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:id="@+id/editText7"
        android:layout_alignBottom="@+id/textView40"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView40" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/textView41"
        android:layout_below="@+id/textView40"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:hint="Type your phone number"
        android:textColor="#fff"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView41" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/textView42"
        android:layout_below="@+id/textView41"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:hint="Type your address"
        android:textColor="#fff"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:id="@+id/editText9"
        android:layout_below="@+id/editText8"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView42" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Service Category :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/textView43"
        android:layout_below="@+id/textView42"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText10"
        android:layout_marginLeft="5dp"
        android:hint="Example-Wedding"
        android:textColor="#fff"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:layout_below="@+id/editText9"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView43" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button8"
        android:background="#007f00"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="add"/>
</RelativeLayout>
