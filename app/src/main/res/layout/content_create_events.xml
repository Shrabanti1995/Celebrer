<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_events" tools:context="com.example.celebrer.CreateEvents">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Name :"
        android:id="@+id/textView34"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginLeft="5dp"
        android:gravity="top|left"
        android:textColor="#fff"
        android:layout_alignTop="@+id/textView34"
        android:hint="Type event name"
        android:textColorHint="#fff"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Location :"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textView35"
        android:layout_below="@+id/textView34"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText2"
        android:textColor="#fff"
        android:hint="Type event location"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/textView35"
        android:layout_toEndOf="@+id/textView35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Host :"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textView36"
        android:layout_below="@+id/textView35"
        android:layout_alignEnd="@+id/textView37" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:textColorHint="#fff"
        android:hint="Who is hosting the event?"
        android:gravity="top|left"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/textView36"
        android:layout_toEndOf="@+id/textView36"
        android:layout_alignBottom="@+id/textView36" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Type :"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/textView37"
        android:layout_below="@+id/textView36"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/editText4"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:hint="Open/Private?"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/textView37" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Category :"
        android:textColor="#fff"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/textView38"
        android:layout_below="@+id/textView37"
        android:layout_alignStart="@+id/textView36" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText5"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:hint="Example - Wedding"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:layout_alignTop="@+id/textView38"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ticket Price :"
        android:id="@+id/textView39"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_below="@+id/textView38"
        android:layout_alignStart="@+id/textView38" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText6"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:hint="Enter the ticket price"
        android:gravity="top|left"
        android:textColorHint="#fff"
        android:layout_alignTop="@+id/textView39"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView35" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE EVENT"
        android:id="@+id/button5"
        android:background="#007f00"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>